<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="?android:attr/selectableItemBackground"
    android:id="@+id/layout_header">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/layout_account"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="end">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(account name)"
            android:id="@+id/txtView_currentAccount"
            android:textColor="#ffffff"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="start"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgView_toggle"
            android:src="@mipmap/ic_arrow_drop_down_white_24dp"
            android:paddingRight="16dp"
            android:paddingTop="4dp" />

    </LinearLayout>

    <!--android:src="@drawable/aka"-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/ic_action_night_switch_grey"
            android:id="@+id/themeSwitch"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/ic_action_online_mode_grey"
            android:id="@+id/offlineSwitch"
            android:layout_marginTop="30dp" />
    </LinearLayout>
</RelativeLayout>