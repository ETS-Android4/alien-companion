<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/layout_gilded"
    android:background="@drawable/rounded_corner_gold"
    android:padding="5dp"
    android:layout_marginLeft="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="?attr/font_small"
        android:layout_height="?attr/font_small"
        android:src="@drawable/ic_star_white_24dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_gilded"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="?attr/font_small"
        android:fontFamily="?attr/defaultFontFamily"
        android:text="x4"/>

</LinearLayout>