<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="2dp"
    android:id="@+id/layout_root">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_postCommentsButton"
        android:background="?attr/themeBackgroundColor">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Title here)"
            android:id="@+id/txtView_postTitle"
            android:textSize="?attr/font_large"
            android:textColor="?attr/themeTextColor"
            android:padding="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(username)"
                android:id="@+id/txtView_postAuthor"
                android:textSize="?attr/font_small"
                android:textColor="?attr/themeTextHintColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" · "
                android:id="@+id/textView16"
                android:textSize="?attr/font_small"
                android:textColor="?attr/themeTextHintColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(age)"
                android:id="@+id/txtView_postAge"
                android:textSize="?attr/font_small"
                android:textColor="?attr/themeTextHintColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" · "
                android:id="@+id/textView19"
                android:textSize="?attr/font_small"
                android:textColor="?attr/themeTextHintColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(subreddit) · "
                android:id="@+id/txtView_postSubreddit"
                android:textSize="?attr/font_small"
                android:textColor="?attr/themeTextHintColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(domain)"
                android:id="@+id/txtView_postDomain"
                android:textSize="?attr/font_small"
                android:textColor="?attr/themeTextHintColor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:textSize="?attr/font_small"
                android:textColor="?attr/themeTextHintColor"
                android:text=" " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NSFW"
                android:id="@+id/txtView_nsfw"
                android:textColor="#d81d1b"
                android:background="@drawable/round_corner_nsfw"
                android:textSize="?attr/font_small" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/themeSelector"
            android:id="@+id/layout_postLinkButton"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/themeTextHintColor"
                android:layout_marginBottom="5dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgView_postImage"
                    android:src="@mipmap/ic_launcher"
                    android:layout_weight="1" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="6"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(domain)"
                        android:id="@+id/txtView_postDomain_two"
                        android:textSize="?attr/font_large"
                        android:textColor="#4e71d4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(post url)"
                        android:id="@+id/txtView_postUrl"
                        android:textSize="?attr/font_small"
                        android:textColor="?attr/themeTextHintColor" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/themeTextHintColor"
                android:layout_marginTop="5dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_selfTextPreview"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/themeTextHintColor"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Self text preview here)"
                android:id="@+id/txtView_selfTextPreview"
                android:textColor="?attr/themeTextHintColor"
                android:textSize="?attr/font_medium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/themeTextHintColor"
                android:layout_marginTop="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(score)"
                        android:id="@+id/txtView_postScore"
                        android:textSize="?attr/font_small"
                        android:textColor="?attr/themeTextHintColor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" points"
                        android:id="@+id/textView26"
                        android:textSize="?attr/font_small"
                        android:textColor="?attr/themeTextHintColor" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(commentCount)"
                        android:id="@+id/txtView_postComments"
                        android:textSize="?attr/font_small"
                        android:textColor="?attr/themeTextHintColor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" comments"
                        android:id="@+id/textView27"
                        android:textSize="?attr/font_small"
                        android:textColor="?attr/themeTextHintColor" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_upvote"
                    android:src="@mipmap/ic_action_upvote_grey"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_downvote"
                    android:src="@mipmap/ic_action_downvote_grey"
                    android:padding="10dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_save"
                    android:src="@mipmap/ic_action_save_grey"
                    android:padding="10dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_hide"
                    android:src="@mipmap/ic_action_hide_grey"
                    android:padding="10dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_more"
                    android:src="@mipmap/ic_action_more_vertical_grey"
                    android:padding="10dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>