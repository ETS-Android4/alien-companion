<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_donation">

        <TextView
            android:id="@+id/textView_donation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/themeTextPrimaryColor"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/themeTextPrimaryColor"
            android:textSize="16sp"
            android:text=" donated "/>

        <TextView
            android:id="@+id/textView_donation_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/themeTextPrimaryColor"
            android:textSize="16sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView_donation_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/themeTextPrimaryColor"
        android:textSize="18sp"/>

</LinearLayout>