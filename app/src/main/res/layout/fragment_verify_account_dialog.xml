<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gDyejeekis.aliencompanion.fragments.dialog_fragments.VerifyAccountDialogFragment"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="15dp"
    android:background="?attr/themeDialogBackgroundColor">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar6"
        android:minWidth="24dp"
        android:minHeight="24dp"
        android:maxWidth="36dp"
        android:maxHeight="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting up account"
        android:id="@+id/textView3"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:textColor="?attr/themeTextPrimaryColor" />

</LinearLayout>
