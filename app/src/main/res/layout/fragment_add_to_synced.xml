<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeDialogBackgroundColor"
    android:gravity="end"
    android:padding="12dp">

    <TextView
        android:text="Add posts to synced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/themeTextPrimaryColor" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup_post_count">

        <RadioButton
            android:text="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton_sync_10"
            android:textColor="?attr/themeTextPrimaryColor"
            android:textSize="20sp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:buttonTint="?attr/themeTextSecondaryColor" />

        <RadioButton
            android:text="25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton_sync_25"
            android:textColor="?attr/themeTextPrimaryColor"
            android:textSize="20sp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:buttonTint="?attr/themeTextSecondaryColor" />

        <RadioButton
            android:text="50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton_sync_50"
            android:textColor="?attr/themeTextPrimaryColor"
            android:textSize="20sp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:buttonTint="?attr/themeTextSecondaryColor" />

        <RadioButton
            android:text="75"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton_sync_75"
            android:textColor="?attr/themeTextPrimaryColor"
            android:textSize="20sp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:buttonTint="?attr/themeTextSecondaryColor" />

        <RadioButton
            android:text="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton_sync_100"
            android:textColor="?attr/themeTextPrimaryColor"
            android:textSize="20sp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:buttonTint="?attr/themeTextSecondaryColor" />

    </RadioGroup>

    <Button
        android:text="@string/sync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_add_to_synced"
        style="@style/FlatButtonStyle" />

</LinearLayout>