<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/themeDialogBackgroundColor"
    android:gravity="end">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadeScrollbars="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(Info title here)"
                android:textColor="?attr/themeTextPrimaryColor"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/textView_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(Info text here)"
                android:textColor="?attr/themeTextPrimaryColor"
                android:textSize="16sp"
                android:layout_margin="8dp"/>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/got_it"
        style="@style/FlatButtonStyle"
        android:layout_margin="8dp"/>

</LinearLayout>