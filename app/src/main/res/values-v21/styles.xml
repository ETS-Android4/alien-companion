        <item name="themeDivider">@drawable/divider_material_grey</item>
        <item name="themeDragHandle">@drawable/ic_drag_handle_white_48dp</item>
        <item name="themeRaisedButtonBackground">@drawable/material_grey_raised_button_background</item>
        <item name="themeFlatButtonBackground">@drawable/touch_selector_button_dark</item>
        <item name="themeCommentsButtonBackground">@drawable/list_comments_button_background_material_grey</item>
        <item name="themeDropdownBackground">@drawable/touch_selector_dropdown_dark</item>
        <!--<item name="themeCardBorderColor">@color/chglib_material_background_default_divider_color</item>-->
        <item name="android:navigationBarColor">@color/materialGreyBackground</item>
    </style>

    <style name="selectedTheme.night">
        <item name="themeTextPrimaryColor">@color/darkPrimaryText</item>
        <item name="themeTextSecondaryColor">@color/darkSecondaryText</item>
        <item name="themeTextHintColor">@color/darkHintText</item>
        <item name="themeTextBackgroundColor">@color/primary_dark</item>
        <item name="themeBackgroundColor">@android:color/black</item>
        <item name="themeSelector">@drawable/touch_selector_dark_theme</item>
        <item name="themeDrawerBackgroundColor">@color/darkDrawerBackground</item>
        <item name="themeDrawerSelector">@drawable/touch_selector_drawer_dark_theme</item>
        <item name="themeDialogBackgroundColor">@color/darkDialogBackground</item>
        <item name="themeDivider">@drawable/divider_dark_theme</item>
        <item name="themeDragHandle">@drawable/ic_drag_handle_white_48dp</item>
