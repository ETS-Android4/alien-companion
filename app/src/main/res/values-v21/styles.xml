        <item name="themeFlatButtonBackground">@drawable/touch_selector_button_dark</item>
        <item name="themeCommentsButtonBackground">@drawable/list_comments_button_background_dark</item>
        <item name="themeDropdownBackground">@drawable/touch_selector_dropdown_dark</item>
        <!--<item name="themeCardBorderColor">@color/darker_gray</item>-->
