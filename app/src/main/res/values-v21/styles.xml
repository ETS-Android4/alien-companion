        <item name="themeTextPrimaryColor">@color/lowContrastPrimaryText</item>
        <item name="themeTextSecondaryColor">@color/lowContrastSecondaryText</item>
        <item name="themeTextHintColor">@color/lowContrastHintText</item>
        <item name="themeTextBackgroundColor">@color/primary_dark</item>
        <item name="themeBackgroundColor">@android:color/black</item>
        <item name="themeSelector">@drawable/touch_selector_dark_theme</item>
        <item name="themeDrawerBackgroundColor">@color/darkDrawerBackground</item>
        <item name="themeDrawerSelector">@drawable/touch_selector_drawer_dark_theme</item>
        <item name="themeDialogBackgroundColor">@color/darkDialogBackground</item>
        <item name="themeDivider">@drawable/divider_dark_low_contrast_theme</item>
        <item name="themeDragHandle">@drawable/ic_drag_handle_white_48dp</item>
        <item name="themeRaisedButtonBackground">@drawable/dark_raised_button_background</item>
        <item name="themeFlatButtonBackground">@drawable/touch_selector_button_dark</item>
        <item name="themeCommentsButtonBackground">@drawable/list_comments_button_background_dark</item>
        <item name="themeDropdownBackground">@drawable/touch_selector_dropdown_dark</item>
