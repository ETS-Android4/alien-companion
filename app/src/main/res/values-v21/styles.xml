<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">?attr/themeBackgroundColor</item>
        <item name="android:textColor">?attr/themeTextPrimaryColor</item>
        <item name="android:textColorSecondary">?attr/themeTextSecondaryColor</item>
        <!--<item name="android:statusBarColor">@color/black</item>-->
        <!--<item name="android:textPrimaryColor">@color/black</item>-->
        <!--<item name="android:actionOverflowButtonStyle">@style/OverFlow</item>-->
        <!--<item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>-->
    </style>

    <style name="MainActivityTheme" parent="AppTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="android:colorControlHighlight">@color/ripple_material_dark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:elevation">4dp</item>
        <!--<item name="android:panelBackground">@android:color/holo_green_light</item>-->
        <!--<item name="android:popupBackground">@color/white</item>-->
        <item name="android:textColor">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="OverflowStyleDark">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:colorBackground">@color/darker_gray</item>
        <item name="android:elevation">0dip</item>
    </style>

    <style name="RaisedButtonStyle" parent="ButtonStyle">
        <item name="android:elevation">2dp</item>
        <item name="android:textColor">?attr/themeTextPrimaryColor</item>
        <item name="android:background">?attr/themeRaisedButtonBackground</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="FlatButtonStyle" parent="ButtonStyle">
        <item name="android:elevation">0dp</item>
        <item name="android:textColor">#03A9F4</item>
        <item name="android:background">?attr/themeFlatButtonBackground</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="MyCardViewStyle" parent="CardView">
        <!--<item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:clickable">true</item>-->
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">1dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>
</resources>