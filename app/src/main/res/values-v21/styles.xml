<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="android:colorControlHighlight">@color/ripple_material_dark</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:elevation">4dp</item>
        <!--<item name="android:panelBackground">@android:color/holo_green_light</item>-->
        <!--<item name="android:popupBackground">@color/white</item>-->
        <item name="android:textColor">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="OverflowStyleDark">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:colorBackground">@color/darker_gray</item>
        <item name="android:elevation">0dip</item>
    </style>

    <style name="RaisedButtonStyle" parent="ButtonStyle">
        <item name="android:elevation">2dp</item>
        <item name="android:textColor">?attr/themeTextPrimaryColor</item>
        <item name="android:background">?attr/themeRaisedButtonBackground</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="FlatButtonStyle" parent="ButtonStyle">
        <item name="android:elevation">0dp</item>
        <item name="android:textColor">#03A9F4</item>
        <item name="android:background">?attr/themeFlatButtonBackground</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="MyCardViewStyle">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">1dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="ImageButtonStyle">
        <item name="android:paddingLeft">0.5dp</item>
        <item name="android:paddingRight">0.5dp</item>
    </style>

    <style name="selectedTheme.day">
        <item name="themeTextPrimaryColor">@color/lightPrimaryText</item>
        <item name="themeTextSecondaryColor">@color/lightSecondaryText</item>
        <item name="themeTextHintColor">@color/lightHintText</item>
        <item name="themeTextBackgroundColor">@color/lighter_gray</item>
        <item name="themeBackgroundColor">@android:color/white</item>
        <item name="themeSelector">@drawable/touch_selector</item>
        <item name="themeDrawerBackgroundColor">@android:color/white</item>
        <item name="themeDrawerSelector">@drawable/touch_selector</item>
        <item name="themeDialogBackgroundColor">@android:color/white</item>
        <item name="themeDivider">@drawable/divider_light_theme</item>
        <item name="themeDragHandle">@drawable/ic_drag_handle_black_48dp</item>
        <item name="themeRaisedButtonBackground">@drawable/light_raised_button_background</item>
        <item name="themeFlatButtonBackground">@drawable/touch_selector_button_light</item>
        <item name="themeCommentsButtonBackground">@drawable/list_comments_button_background_light</item>
        <item name="themeDropdownBackground">@drawable/touch_selector_dropdown_light</item>
        <!--<item name="themeCardBorderColor">@color/chglib_material_background_default_divider_color</item>-->
    </style>

    <style name="selectedTheme.material_blue">
        <item name="themeTextPrimaryColor">@color/materialBluePrimaryText</item>
        <item name="themeTextSecondaryColor">@color/materialBlueSecondaryText</item>
        <item name="themeTextHintColor">@color/materialBlueHintText</item>
        <item name="themeTextBackgroundColor">@color/materialBlueBackground</item>
        <item name="themeBackgroundColor">@color/materialBlueBackground</item>
        <item name="themeSelector">@drawable/touch_selector_material_blue</item>
        <item name="themeDrawerBackgroundColor">@color/materialBlueDrawerBackground</item>
        <item name="themeDrawerSelector">@drawable/touch_selector_material_blue</item>
        <item name="themeDialogBackgroundColor">@color/materialBlueDialogBackground</item>
        <item name="themeDivider">@drawable/divider_material_blue</item>
        <item name="themeDragHandle">@drawable/ic_drag_handle_white_48dp</item>
        <item name="themeRaisedButtonBackground">@drawable/material_blue_raised_button_background</item>
        <item name="themeFlatButtonBackground">@drawable/touch_selector_button_dark</item>
        <item name="themeCommentsButtonBackground">@drawable/list_comments_button_background_material_blue</item>
        <item name="themeDropdownBackground">@drawable/touch_selector_dropdown_dark</item>
        <!--<item name="themeCardBorderColor">@color/chglib_material_background_default_divider_color</item>-->
        <item name="android:navigationBarColor">@color/materialBlueBackground</item>
    </style>

    <style name="selectedTheme.material_grey">
        <item name="themeTextPrimaryColor">@color/materialGreyPrimaryText</item>
        <item name="themeTextSecondaryColor">@color/materialGreySecondaryText</item>
        <item name="themeTextHintColor">@color/materialGreyHintText</item>
        <item name="themeTextBackgroundColor">@color/materialGreyBackground</item>
        <item name="themeBackgroundColor">@color/materialGreyBackground</item>
        <item name="themeSelector">@drawable/touch_selector_material_grey</item>
        <item name="themeDrawerBackgroundColor">@color/materialGreyDrawerBackground</item>
        <item name="themeDrawerSelector">@drawable/touch_selector_material_grey</item>
