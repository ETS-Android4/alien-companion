<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.dyejeekis.aliencompanion" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.dyejeekis.aliencompanion.Activities.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/MainActivityTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dyejeekis.aliencompanion.Activities.PostActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_post" >
        </activity>
        <activity
            android:name="com.dyejeekis.aliencompanion.Activities.BrowserActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_browser" >
        </activity>
        <activity
            android:name="com.dyejeekis.aliencompanion.Activities.UserActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_user" >
        </activity>
        <activity
            android:name="com.dyejeekis.aliencompanion.Activities.SearchActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="com.dyejeekis.aliencompanion.Activities.SettingsActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_edit_prefs" >
        </activity>
        <activity
            android:name="com.dyejeekis.aliencompanion.Activities.SubredditActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_subreddit" >
        </activity>
        <activity
            android:name="com.dyejeekis.aliencompanion.Activities.SubmitActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_submit_post" >
        </activity>
        <service
            android:name="com.dyejeekis.aliencompanion.Services.DownloaderService"
            android:enabled="true">
        </service>

    </application>

</manifest>
